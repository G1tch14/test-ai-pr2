# ============================================
# Environment Variables Configuration
# ============================================
# Copy this file to .env and update the values for your environment
# Never commit .env file to version control

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/example_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_DRIVER=org.postgresql.Driver

# JPA Configuration
JPA_DIALECT=org.hibernate.dialect.PostgreSQLDialect
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
JPA_USE_COMMENTS=true

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
APP_USERNAME=admin
APP_PASSWORD=secure_password_here
JSON_PRETTY_PRINT=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Server Configuration (optional)
SERVER_PORT=8080

# Logging Configuration (optional)
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# External Services (example)
# API_KEY=your_api_key_here
# EXTERNAL_SERVICE_URL=https://api.example.com

# ============================================
# Production Environment Variables
# ============================================
# Uncomment and configure for production

# DATABASE_URL=jdbc:postgresql://production-db:5432/production_db
# DATABASE_USERNAME=production_user
# DATABASE_PASSWORD=production_password
# SPRING_PROFILES_ACTIVE=prod
# JPA_DDL_AUTO=validate
# JPA_SHOW_SQL=false